{% extends 'base.html.twig' %}

{% block main_content %}


   
<form action="{{ path('ingresar_pronosticos') }}" method="POST">






<hr>

{% if app.user.campeon is null or app.user.subcampeon is null  %}        
        <div class="alert alert-danger" role="alert">
    Puntos extra sin ingresar!! <a href="{{ path('puntos_extra') }}">Ir a puntos extra</a>
    </div>
    {% endif %}


<h4>PRONÃ“STICOS </h4> 

<table class="table table-dark">
	
	<tbody>

	
   {% for partido in partidos %}



<tr>
<td>{{ partido.instancia }} {% if(partido.grupo != "") %} - Grupo {{partido.grupo }} {% endif %}</td>
<td>{{ partido.dia }} {{ partido.hora }}</td>
<td>{{ partido.local }} <input maxlength="2" class="pronostico_input" {{ partido.es_valido_pronosticar == false ? "disabled" }} value="{{ partido.pronostico.goles_local }}" type="number" name="{{partido.pronostico.id ~ "-local"}}"> vs. <input maxlength="2" class="pronostico_input" {{ partido.es_valido_pronosticar == false ? "disabled" }} value="{{ partido.pronostico.goles_visitante }}" type="number" name="{{partido.pronostico.id ~ "-visitante"}}"> {{ partido.visitante }}</td>

{% if(partido.resultado is defined) %}
<td>{{ partido.resultado.goles_local }} - {{ partido.resultado.goles_visitante }}</td>
<td>{{ partido.puntaje.puntos }} puntos</td>
<td>
	{% for logro in partido.puntaje.logros %}
		<p style="font-size: 11px; margin-bottom: 0px;">{{ logro }}</p>
	{% endfor %}		
</td>
{% else %}
<td>Sin jugar</td>
<td></td>
<td></td>
{% endif %}	




</tr>

   


    {% endfor %}
</tbody>
</table>    












<br>
<button class="btn btn-info" type="post">Guardar</button>
</form>


<style type="text/css">


.pronostico_input{
	text-align: center;
	width: 50px;
}




input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
    /* display: none; <- Crashes Chrome on hover */
    -webkit-appearance: none;
    margin: 0; /* <-- Apparently some margin are still there even though it's hidden */
}

input[type=number] {
    -moz-appearance:textfield; /* Firefox */
}

</style>




{% endblock %}
